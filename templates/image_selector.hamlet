<div class="imagescroller">
    $case result
        $of Right prior
            <div class="imagerow">
                <input type=radio id=#{idAttr} name=#{nameAttr} value="None" *{attrs}>
                    <span style="width: 100%">
                        None
            <!--
            <div class="imagerow">
                <input type=radio id=#{idAttr} name=#{nameAttr} value="New" *{attrs}>
                    <span style="width: 100%">
                        Upload a New Image...

                    Note:  To be implemented later...
            -->
            $forall Entity _ image <- images
                $if ((imageName image) == prior)
                    <div class="imagerow">
                        <input type=radio id=#{idAttr} name=#{nameAttr} value=#{imageName image} *{attrs} checked>
                            <img src=@{ImageR $ imageName image} name=#{imageName image} height=200 width=200>
                $else
                    <div class="imagerow">
                        <input type=radio id=#{idAttr} name=#{nameAttr} value=#{imageName image} *{attrs}>
                            <img src=@{ImageR $ imageName image} name=#{imageName image} height=200 width=200>
        $of Left _
            <div class="imagerow">
                <input type=radio id=#{idAttr} name=#{nameAttr} value="None" *{attrs} checked>
                    <span style="width: 100%">
                        None
            <!--
            <div class="imagerow">
                <input type=radio id=#{idAttr} name=#{nameAttr} value="New" *{attrs}>
                    <span style="width: 100%">
                        Upload a New Image...  
                    Note: To be implemented later...
            -->
            $forall Entity _ image <- images
                <div class="imagerow">
                    <input type=radio id=#{idAttr} name=#{nameAttr} value=#{imageName image} *{attrs}>
                        <img src=@{ImageR $ imageName image} name=#{imageName image} height=200 width=200>
